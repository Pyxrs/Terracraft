{
  "schemaVersion": 1,
  "id": "terracraft",
  "version": "${version}",

  "name": "Terracraft",
  "description": "A Terraria mod for Minecraft with the primary focus of making 3D Terraria whilst preserving as many Minecraft mechanics and features as possible",
  "authors": [
    "SimplyCmd",
    "RiverOaken",
    "Ryorama"
  ],
  "contact": {
    "homepage": "https://simplycmd.github.io/Terracraft/",
    "sources": "https://github.com/SimplyCmd/Terracraft"
  },

  "license": "MIT",
  "icon": "assets/terracraft/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": ["io.github.simplycmd.terracraft.Main"],
    "client": ["io.github.simplycmd.terracraft.MainClient"]
  },
  "mixins": [
    "terracraft.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16"
  },
  "suggests": {
    "another-mod": "*"
  }
}
